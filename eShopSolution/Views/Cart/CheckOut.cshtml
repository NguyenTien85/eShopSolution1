@model CheckOutViewModel
@{
    ViewData["Title"] = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="breadcrumb">
    <li><a href="/">Home</a> <span class="divider">/</span></li>
    <li class="active"> SHOPPING CART</li>
</ul>
<h3>  SHOPPING CART [ <small><span class="lbl_num_item_in_cart">0</span> Item(s) </small>]<a href="/" class="btn btn-large pull-right"><i class="icon-arrow-left"></i> Continue Shopping </a></h3>
<hr class="soft" />
@if (TempData["SuccessMsg"] != null)
{
    <div class="span6">
        <span class="alert alert-success">@TempData["SuccessMsg"]</span>
    </div>

}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td> <img width="60" src="@item.ThumbnailImage" alt="" /></td>
                    <td>@item.Description<br />Color : black, Material : metal</td>
                    <td> @item.Quantity           </td>
                    <td>@item.Price</td>
                    <td>@(item.Quantity*item.Price)</td>
                </tr>
            }

            <tr>
                <td colspan="4" style="text-align:right"><strong>TOTAL =</strong></td>
                <td class="label label-important" style="display:block"> <strong> @Model.CartItems.Sum(x => x.Price * x.Quantity) </strong></td>
            </tr>
        </tbody>
    </table>

    <table class="table table-bordered">
        @if (!User.Identity.IsAuthenticated)
        {
            <tr>
                <td>
                    <form asp-action="Login" asp-controller="Account" method="post" class="form-horizontal">
                        <div class="control-group">
                            <label class="control-label">Username</label>
                            <div class="controls">
                                <input type="text" name="UserName" placeholder="User name">
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">Password</label>
                            <div class="controls">
                                <input type="password" name="Password" placeholder="Password">
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="controls">
                                <button type="submit" class="btn">Sign in</button> OR <a asp-action="Register" asp-controller="Account" class="btn">Register Now!</a>
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="controls">
                                <a href="forgetpass.html" style="text-decoration:underline">Forgot password ?</a>
                            </div>
                        </div>
                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                        <input type="hidden" name="RememberMe" value="true" />
                    </form>
                </td>
            </tr>
        }
    </table>

    <table class="table table-bordered">
        <tr><th>SHIPPING DETAILS </th></tr>
        <tr>
            <td>
                <form asp-action="CheckOut" asp-controller="Cart" method="post" class="form-horizontal">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="control-group">
                        <label class="control-label">Ship Name </label>
                        <div class="controls">
                            <input type="text" asp-for="ShipName" placeholder="Ship Name">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Ship Phone Number</label>
                        <div class="controls">
                            <input type="text" asp-for="ShipPhoneNumber" placeholder="Ship Phone Number">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Ship Email</label>
                        <div class="controls">
                            <input type="email" asp-for="ShipEmail" placeholder="Ship Email">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Ship Address</label>
                        <div class="controls">
                            <input type="text" asp-for="ShipAddress" placeholder="Ship Address">
                        </div>
                    </div>
                    <input type="hidden" asp-for="UserName" value="@User.Identity.Name" />

                    <div class="control-group">
                        <div class="controls">
                            <button type="submit" class="btn">PURCHASE</button>
                        </div>
                    </div>
                </form>
            </td>
        </tr>
    </table>
    <a href="/" class="btn btn-large"><i class="icon-arrow-left"></i> Continue Shopping </a>
}

