@model HomeViewModel

@inject LazZiya.ExpressLocalization.ISharedCultureLocalizer _loc;
@{
    ViewData["Title"] = "Home Page";
    var culture = CultureInfo.CurrentCulture.Name;
}

@section Slider{
    <div id="carouselBlk">
        <div id="myCarousel" class="carousel slide">
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Slides.Count; i++)
                {
                    var slide = Model.Slides[i];
                    <div class="item @(i==0? "active":"")">
                        <div class="container">
                            <a href="@slide.Url">
                                <img style="width:100%" src="@slide.Image" alt="special offers" />
                            </a>
                            <div class="carousel-caption">
                                <h4>@slide.Name</h4>
                                <p>@slide.Description</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">&lsaquo;</a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">&rsaquo;</a>
        </div>
    </div>
}

<div class="well well-small">
    <h4><localize>Featured Products</localize> <small class="pull-right">200+ featured products</small></h4>
    <div class="row-fluid">
        <div id="featured" class="carousel slide">
            <div class="carousel-inner">
                @{
                    var noItems = Model.FeaturedProducts.Count;
                    var tmpdouble = noItems / 4f;
                    int noGroups = ((int)Math.Ceiling(tmpdouble));

                    for (int i = noItems; i < noGroups * 4; i++)
                    {
                        Model.FeaturedProducts.Add(Model.FeaturedProducts[i - noItems]);
                    }
                }
                @for (int i = 0; i < noGroups; i++)
                {
                    <div class="item @(i==0? "active":"")">
                        <ul class="thumbnails">
                            @for (int j = 0; j < 4; j++)
                            {
                                var featureProduct = Model.FeaturedProducts[i * 4 + j];
                                var url = $"/{culture}/{_loc["productUrl"]}/{featureProduct.Id}";
                                <li class="span3">
                                    <div class="thumbnail">
                                        <i class="tag"></i>
                                        <a href="@url">
                                            <img src="@featureProduct.ThubnailImage" alt="@featureProduct.Name" >
                                        </a>
                                        <div class="caption">
                                            <h5>@featureProduct.Name</h5>
                                            <h4>
                                                <a class="btn" href="product_details.html"><localize>VIEW</localize></a>
                                                <span class="pull-right">@featureProduct.Price</span>
                                            </h4>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>
            <a class="left carousel-control" href="#featured" data-slide="prev">‹</a>
            <a class="right carousel-control" href="#featured" data-slide="next">›</a>
        </div>
    </div>
</div>
<h4 localize-content>Latest Products </h4>
<ul class="thumbnails">
    @foreach (var item in Model.LatestProducts)
    {
        var url = $"/{culture}/{_loc["productUrl"]}/{item.Id}";
        <li class="span3">
            <div class="thumbnail">
                <a href="@url"><img src="@item.ThubnailImage" alt="@item.Name" style="height:100px"/></a>
                <div class="caption">
                    <h5>@item.Name</h5>
                    <p>
                        @item.Description
                    </p>

                    <h4 style="text-align:center">
                        <a class="btn" href="@url"> <i class="icon-zoom-in"></i></a>
                        <a class="btn" href="#"><localize>Add to</localize> <i class="icon-shopping-cart"></i></a>
                        <a class="btn btn-primary" href="#">@item.Price</a>
                    </h4>
                </div>
            </div>
        </li>
    }
</ul>