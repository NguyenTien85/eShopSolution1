@using eShopSolution.ViewModels.Catalog.Categories
@model List<CategoryViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Categoy List</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">MainPage</a></li>
        <li class="breadcrumb-item active">Categoy List</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6 col-xs-12">
                    <a class="btn btn-success" asp-action="Create" asp-controller="Category">New Categoy</a>
                </div>

                <div class="col-md-6">
                    <form asp-action="Index" method="get">
                        <div class="col-md-3">
                            <select name="categoryId" asp-items="@ViewBag.CategoryIds">
                                <option>
                                    Select category
                                </option>
                            </select>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="card-body">
            @if (@ViewBag.SuccessMessage != null)
            {
                <div class="row">
                    <div id="msgAlert" class="alert alert-success" role="alert">
                        @ViewBag.SuccessMessage
                    </div>
                </div>
            }
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            SortOrder
                        </th>
                        <th>
                            IsShowOnHome
                        </th>
                        <th>
                            ParentId
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            SeoDescription
                        </th>
                        <th>
                            SeoTitle
                        </th>
                        <th>
                            LanguageId
                        </th>
                        <th>
                            SeoAlias
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SortOrder)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsShowOnHome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ParentId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SeoDescription)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SeoTitle)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LanguageId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SeoAlias)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @*@await Component.InvokeAsync("Pager", Model)*@
    </div>
</div>